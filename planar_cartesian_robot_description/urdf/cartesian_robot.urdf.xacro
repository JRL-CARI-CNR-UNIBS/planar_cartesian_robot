<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="cartesian_robot" >

  <material name="red">
    <color rgba="0.8 0 0 1"/>
  </material>
  <material name="green">
    <color rgba="0 0.8 0 1"/>
  </material>
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="1 1 1 0.9"/>
  </material>

  <link name="link_Z"/>

  <link name="link_Y"/>

  <joint name="from_Z_to_Y" type="fixed">
    <parent link="link_Z"/>
    <child link="link_Y"/>
    <axis xyz = "0 0 1" />
    <origin rpy="0 0 0" xyz="0 0.5 -0.5"/>
    <limit effort="1000.0" lower="0" upper="1" velocity="0.5"/>
  </joint>

  <link name="link_fake"/>

  <joint name="from_Y_to_fake" type="prismatic">
    <parent link="link_Y"/>
    <child link="link_fake"/>
    <axis xyz = "0 1 0" />
    <origin rpy="0 0 0" xyz="0 -0.5 0"/>
    <limit effort="1000.0" lower="0" upper="1" velocity="0.5"/>
  </joint>

  <link name="link_X"/>

  <joint name="from_fake_to_X" type="prismatic">
    <parent link="link_fake"/>
    <child link="link_X"/>
    <axis xyz = "1 0 0" />
    <origin rpy="0 0 0" xyz="-0.5 0 0"/>
    <limit effort="1000.0" lower="0" upper="1" velocity="0.5"/>
  </joint>

  <link name="end_effector">
    <visual>
      <geometry>
        <sphere radius="0.005"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="black"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
  </link>

  <joint name="from_X_to_end" type="fixed">
    <parent link="link_X"/>
    <child link="end_effector"/>
    <origin rpy="0 0 0" xyz="0.5 0 0"/>
  </joint>

</robot>
